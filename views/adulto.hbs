<div id="main">
    <div class="topo">
        <a href="/" title="Home" id="btnHome"></a>
        <h1>Dados Adulto</h1>

        <a href="javascript:window.history.go(-1)" title="Voltar" class="btnVoltar"></a>
    </div>

    {{#if errors}}
    <div class="alert alert-danger">
        <ul>
            {{#each errors}}
            <li>{{msg}}</li>
            {{/each}}
        </ul>
    </div>
    {{/if}}


    <div class="forms">
        <form>
            <input type="hidden" name="_id" />
            <fieldset>
                {{>adulto1}}
            </fieldset>
            <fieldset>
                {{>adulto2}}
            </fieldset>
        </form>
    </div>
</div>

<script>

    $(function () {
        $('form>fieldset:eq(1)').hide()

        $("form button").click(function(e){
            e.preventDefault();
            var data = $("form").serialize();
            console.log(data)
            $.post("cadastro/adulto", data)
                .done(function(data) {
                    alert( "success:"+data );
                })
                .fail(function() {
                    alert( "error" );
                })
        })
        
        $('#next').click(function (e) {
            e.preventDefault();
            var form = $('form>fieldset');
            form.filter(':eq(0)').hide()
            form.filter(':eq(1)').show()
        })

        $('#previous').click(function (e) {
            e.preventDefault();
            var form = $('form>fieldset');
            form.filter(':eq(0)').show()
            form.filter(':eq(1)').hide()
        })
    })
</script>