<div id="main">
    <div class="topo">
        <a href="/" title="Home" id="btnHome"></a>
        <h1>Dados Adulto</h1>

        <a href="javascript:window.history.go(-1)" title="Voltar" class="btnVoltar"></a>
    </div>

    <div class="forms">
        <form>
            <input type="hidden" name="_id"  value="{{_id}}" />
            <fieldset>
                {{>adulto1}}
            </fieldset>
            <fieldset>
                {{>adulto2}}
            </fieldset>
            
            <button type="submit" class="btnAzul">SALVAR</button>
            <a class="btnAzul" href="/">CANCELAR</a>
            <a id="previous" class="btnAzul">ANTERIOR</a>
            <a id="next" class="btnAzul">PRÃ“XIMO</a>

        </form>
    </div>
</div>

<script>

    $(function () {
        $('form>fieldset:eq(1)').hide()
        $('#previous').hide()

        $("form button").click(function (e) {
            e.preventDefault();
            var data = $("form").serialize();
            $.post("/cadastro/adulto", data, function () {
                window.location = "/";
            })
        })

        $('#next').click(function (e) {
            e.preventDefault();
            var form = $('form>fieldset');
            form.filter(':eq(0)').hide()
            form.filter(':eq(1)').show()
            $('#previous').show()
            $('#next').hide()
        })

        $('#previous').click(function (e) {
            e.preventDefault();
            var form = $('form>fieldset');
            form.filter(':eq(0)').show()
            form.filter(':eq(1)').hide()
            $('#next').show()
            $('#previous').hide()
        })
    })
</script>